{
  "expo": {
    "name": "FleetTrackingApp",
    "slug": "FleetTrackingApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.fleettrackingapp",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs access to your location to track delivery agents.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app needs access to your location for background tracking."
      },
      "config": {
        "googleMapsApiKey": "AIzaSyDUMMY-KEY-FOR-TESTING-ONLY12345"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.fleettrackingapp",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyDUMMY-KEY-FOR-TESTING-ONLY12345"
        }
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow FleetTrackingApp to use your location for background tracking."
        }
      ],
      [
        "expo-task-manager",
        {}
      ]
    ]
  }
}
